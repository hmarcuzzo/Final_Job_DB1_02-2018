<!doctype html>
<html lang="en">
        <% include partials/header.ejs %>
<body>
        <div id="root"> 
            <div class="app">
                <% include partials/menu.ejs %>
               
                <!--- INICIO DO CONTEUDO DA PAGINA -->
                <main class="content container-fluid">
                        <% if (message != '') { %>
                            <p class="text-center text-danger"><%= message %></p>
                        
                            <% } %>
                        <div class="p-3 mt-3">

                           <!-- FORMULARIO PARA ADD CLIENTES -->
                           <form class="add-player-form" action="<%=action%>" method="post">
                            <div class="form">
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Nome</label>
                                            <% if(fornecedor){ %>
                                                <input type="hidden" name="id_fornecedor" id="id_fornecedor" value="<%=fornecedor.ID%>"/>
                                                <input type="text" class="form-control" name="nome_fornecedor" placeholder="Informe o nome do fornecedor..." 
                                                value="<%=fornecedor.Nome%>" charCounter maxlength="155">
                                              <% } else{ %>  
                                                <input type="text" class="form-control" name="nome_fornecedor" placeholder="Informe o nome do fornecedor..." value="" charCounter maxlength="155">
                                             <% } %>   
                                            
                                        </div>
                                    </div>                                                           
                                        <div class="col-12 col-md-6">
                                                <div class="form-group">
                                                    <label>Telefone</label>
                                                    <% if(fornecedor){ %>
                                                        <input type="number" class="form-control" name="tel_fornecedor" placeholder="Informe o telefone do cliente..." value="<%=fornecedor.Tel%>" charCounter maxlength="15">                                                       
                                                    <% } else{ %>
                                                        <input type="number" class="form-control" name="tel_fornecedor" placeholder="Informe o telefone do cliente..." value="" charCounter maxlength="15">                                                       
                                                    <% } %>
                                                </div>
                                            </div>
                                    </div>
                                <hr>
                                <div class="row">
                                    <div class="col-12 d-flex justify-content-end">
                                        <button class="btn btn-success ml-2">Pesquisar</button>
                                        <button class="btn btn-primary ml-2" type="submit" onclick="submitForm()">Salvar</button>                                        
                                        <button class="btn ml-2">Limpar</button>
                                    </div>
                                </div>
                            </div>
                            </form>

                           <!-- LISTAGEM GERAL DE CLIENTES -->
                           <table class="table mt-5">
                              <thead>
                                 <tr>
                                    <th></th>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>Telefone</th>                                    
                                    <th>Ações</th>
                                 </tr>
                              </thead>
                              <tbody>
                                    <% fornecedores.forEach(function(fornecedor){ %>
                                        <tr>                                            
                                            <td><i class="fas fa-users"></i></td>
                                            <td><%= fornecedor.ID %></td>
                                            <td><%= fornecedor.Nome %></td>
                                            <td><%= fornecedor.Tel %></td>                                                                                        
                                            <td>
                                                <a href="/fornecedores/editar/<%=fornecedor.ID%>" class="btn btn-sm btn-primary">Editar</a>
                                                <a href="/fornecedores/remover/<%=fornecedor.ID%>" class="btn btn-sm btn-danger">Remover</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                              </tbody>
                           </table>
                        </div>
                     </main>

                <!-- FIM DO CONTEUDO DA PAGINA -->
                
                <% include partials/footer.ejs %>
            </div>
        </div>

        <script>
               
                function submitForm() {
                    document.contact-form.submit();
                    document.contact-form.reset();
                }
            </script>
</body>
</html>
